rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isSignedIn() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function cannotModifySensitiveFields() {
      return !request.resource.data.diff(resource.data).affectedKeys().hasAny([
        'role', 
        'referralCode', 
        'referrerId', 
        'referredBy',
        'createdAt'
      ]);
    }
    
    // USERS COLLECTION
    match /users/{userId} {
      allow read: if true;
      allow create: if request.resource.data.role == 'user' &&
                      request.auth.uid == userId;
      allow update: if (isSignedIn() && isOwner(userId) && cannotModifySensitiveFields()) ||
                      isAdmin() ||
                      (isSignedIn() && request.resource.data.diff(resource.data).affectedKeys().hasOnly([
                        'wallet', 'isReferralActive', 'stats', 'activatedAt'
                      ]));
      allow delete: if false;
    }
    
    // REFERRAL CODES COLLECTION
    match /referralCodes/{code} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update, delete: if false;
    }
    
    // TRANSACTIONS COLLECTION
    match /transactions/{transactionId} {
      allow read: if isSignedIn() && 
                    (request.auth.uid == resource.data.userId || isAdmin());
      allow create: if isSignedIn();
      allow update, delete: if false;
    }
    
    // WITHDRAWALS COLLECTION
    match /withdrawals/{withdrawalId} {
      allow read: if isSignedIn() && 
                    (request.auth.uid == resource.data.userId || isAdmin());
      allow create: if isSignedIn() && 
                      request.resource.data.userId == request.auth.uid &&
                      request.resource.data.status == 'PENDING';
      allow update: if isAdmin();
      allow delete: if false;
    }
    
    // ADMIN WITHDRAWALS COLLECTION
    match /adminWithdrawals/{withdrawalId} {
      allow read, create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if false;
    }
    
    // ADMIN STATS COLLECTION
    match /adminStats/{document} {
      allow read: if isAdmin();
      allow create, update: if isSignedIn();
      allow delete: if false;
    }
    
    // NOTIFICATIONS COLLECTION
    match /notifications/{notificationId} {
      allow read: if isSignedIn() && 
                    request.auth.uid == resource.data.userId;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && 
                      request.auth.uid == resource.data.userId &&
                      request.resource.data.diff(resource.data).affectedKeys().hasOnly(['read', 'readAt']);
      allow delete: if false;
    }
  }
}